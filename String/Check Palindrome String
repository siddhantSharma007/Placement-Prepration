class Solution {
    int isPalindrome(String S) {
       int i = 0, j = S.length()-1;
       while(i < j){
           char start = S.charAt(i);
           char end = S.charAt(j);
           
           if(start != end){
               return 0;    
           }
           
           i++;
           j--;
       }
       return 1;
   }
};
